<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Main{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('assets/css/bootstrap.css') }}" rel="stylesheet"/>
        {% endblock %}
    </head>
    <body class="p-4">
        {% block menu %}
            <div class="my-3">
                <a class="btn btn-{% if controller_name == 'MainController' %}primary{% else %}dark{% endif %}" href="{{ path('index') }}" role="button">Home</a>
                <a class="btn btn-{% if controller_name == 'CategoryController' %}primary{% else %}dark{% endif %}" href="{{ path('category_show_all') }}" role="button">Categories</a>
                <a class="btn btn-{% if controller_name == 'ProductController' %}primary{% else %}dark{% endif %}" href="{{ path('product_show_all') }}" role="button">Products</a>
            </div>
        {% endblock %}
        <hr>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
