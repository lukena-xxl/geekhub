{% extends 'base.html.twig' %}

{% block title %}Product "{{ product.title }}"{% endblock %}

{% block body %}
    <h1>Product "{{ product.title }}"</h1>
    <div class="mt-3">
        <div><strong>Identifier:</strong> {{ product.id }}</div>
        <div><strong>Title:</strong> {{ product.title }}</div>
        <div><strong>Category:</strong> {{ product.idCategory }}</div>
        <div><strong>Price:</strong> {{ product.price }}</div>
        <div><strong>Stock:</strong> {{ product.stock }}</div>
    </div>
    <div class="mt-3">
        <a class="btn btn-warning" href="{{ path('product_edit', {'id': product.id}) }}" role="button">Edit</a>
        <a class="btn btn-danger" href="{{ path('product_delete', {'id': product.id}) }}" role="button">Delete</a>
    </div>
{% endblock %}
