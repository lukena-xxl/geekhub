{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>All Products</h1>
    {% if products %}
    <table class="table mt-3">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.categoryTitle }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.stock }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('product_show', {'id': product.id}) }}" role="button">Show</a>
                    <a class="btn btn-warning" href="{{ path('product_edit', {'id': product.id}) }}" role="button">Edit</a>
                    <a class="btn btn-danger" href="{{ path('product_delete', {'id': product.id}) }}" role="button">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
    {% else %}
        <p class="mt-3">There are no products yet!</p>
    {% endif %}
    <a class="btn btn-success mt-3" href="{{ path('product_add') }}" role="button">Add product</a>
{% endblock %}
