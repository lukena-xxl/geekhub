{% extends 'base.html.twig' %}

{% block title %}Editing a Category{% endblock %}

{% block body %}
    <h1>Editing a Category</h1>
    <form method="post" action="{{ path('category_edit', {'id': category.id}) }}">
        <div class="form-group">
            <label for="formGroupTitle">Name of category</label>
            <input type="text" name="title" value="{{ category.title }}" class="form-control w-50" id="formGroupTitle" placeholder="Enter a category name">
        </div>
        <input type="hidden" name="id" value="{{ category.id }}">
        <button type="submit" class="btn btn-success mt-3">Save changes</button>
    </form>
{% endblock %}
