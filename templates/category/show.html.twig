{% extends 'base.html.twig' %}

{% block title %}Category "{{ category.title }}"{% endblock %}

{% block body %}
    <h1>Category "{{ category.title }}"</h1>
    <div class="mt-3">
        <div><strong>Identifier:</strong> {{ category.id }}</div>
        <div><strong>Title:</strong> {{ category.title }}</div>
    </div>
    <div class="mt-3">
        <a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}" role="button">Edit</a>
        <a class="btn btn-danger" href="{{ path('category_delete', {'id': category.id}) }}" role="button">Delete</a>
    </div>
{% endblock %}
