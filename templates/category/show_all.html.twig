{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>All Categories</h1>
    {% if categories %}
    <table class="table mt-3">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Number of products</th>
            <th>Actions</th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.numProducts }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('category_show', {'id': category.id}) }}" role="button">Show</a>
                    <a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}" role="button">Edit</a>
                    <a class="btn btn-danger" href="{{ path('category_delete', {'id': category.id}) }}" role="button">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
    {% else %}
        <p class="mt-3">There are no categories yet!</p>
    {% endif %}
    <a class="btn btn-success" href="{{ path('category_add') }}" role="button">Add category</a>
{% endblock %}
